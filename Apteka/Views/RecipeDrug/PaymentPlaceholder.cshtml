@model Apteka.Models.RecipeDrugAfterPaymentViewModel

<div class="panel panel-danger placeholder-site">
    <div class="panel-heading text-center"><h1>Zamów lek recepturowy</h1></div>
    <div class="panel-body">
        <h2>
            Ta strona służy wyłącznie zasymulowaniu odpowiedzi systemów bankowych.
            W finalnej wersji będzie tutaj formularz płatności realizowany przez zewnętrzny system jak PayU.
        </h2>
        <h3>Wybrany typ płatności : @Model.PaymentType</h3>
        <h2 class="col-md-12 text-center">Przelew bankowy</h2>
        <div class="row">
            <div class="col-md-offset-2 col-md-4">@Html.ActionLink("Sukces","Success", new { Model.RecipeDrug.ID }, new { @class="btn btn-success" })</div>
            <div class="col-md-4">@Html.ActionLink("Niepowodzenie", "Failure", new { Model.RecipeDrug.ID }, new { @class = "btn btn-danger" })</div>
        </div>
        <h2 class="col-md-12 text-center">Karta płatnicza</h2>
        <div class="row">
            <div class="col-md-offset-2 col-md-4">@Html.ActionLink("Sukces", "Success", new { Model.RecipeDrug.ID }, new { @class = "btn btn-success" })</div>
            <div class="col-md-4">@Html.ActionLink("Niepowodzenie", "Failure", new { Model.RecipeDrug.ID }, new { @class = "btn btn-danger" })</div>
        </div>
    </div>
    @Html.HiddenFor(m => m.RecipeDrug.ID)
</div>

